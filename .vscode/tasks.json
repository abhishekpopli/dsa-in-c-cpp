{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "shell: gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-std=c11",
        "-pedantic-errors",
        "-Wall",
        "-Wextra",
        "-Wsign-conversion",
        "-Werror",
        "-ledit",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "shell: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "-pedantic-errors",
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wsign-conversion",
        "-Werror",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
