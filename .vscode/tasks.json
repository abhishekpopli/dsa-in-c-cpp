{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "shell: gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-std=c99", // c11, c18
        "-Wall", // warnings
        "-g",
        "${file}",
        "-ledit", // linking
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "shell: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
