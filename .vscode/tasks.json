{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "shell: gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-std=c99",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
